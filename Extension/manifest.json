{
  "manifest_version": 2,
  "name": "Overtime Manager",
  "description": "Never miss your overtime details.",
  "version": "1.0",

  "icons": {
    "16": "/img/icon16.png",
    "64": "/img/icon64.png",
    "128": "/img/icon128.png"
  },

  "background": {
    "scripts": [
      "/js/overtime.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "title": "Overtime Assistant"
  },

  "permissions": [
    "storage"
  ]
}